# Environment Configuration
# Copy this file to .env and fill in the values

# Application
VITE_APP_NAME=OneBookshelf
VITE_APP_VERSION=0.1.0

# Feature Flags
VITE_FEATURE_AUTH_ENABLED=true
VITE_FEATURE_OFFLINE_MODE=true
VITE_FEATURE_PLUGINS_ENABLED=true

# Authentication (OpenID Connect)
VITE_OIDC_AUTHORITY=
VITE_OIDC_CLIENT_ID=
VITE_OIDC_REDIRECT_URI=

# Storage
VITE_STORAGE_TYPE=local
VITE_CLOUD_STORAGE_ENDPOINT=

# Policy Engine
VITE_POLICY_ENGINE_ENABLED=false

# Localization
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,de
